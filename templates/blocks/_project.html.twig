{% if projects|default %}

    {# DESKTOP #}
    <ul id="hexGrid">
        {% for project in projects %}
            <li class="hex">
                <div class="hexIn">
                    <a class="hexLink modal-trigger" data-target="modal1{{project.id}}">
                        <img src="{{asset('uploads/projets/' ~ project.image)}}" alt="Maquette du projet {{project.title}}" />
                        <h2 class="white-text">{{project.title}}</h2>
                        {{project.description|raw}}
                    </a>
                </div>
            </li>
        {% endfor %}
    </ul>

    {# MODALS #}
    {% for project in projects %}
        <div id="modal1{{project.id}}" class="modal hex_modal hidden">
            <div class="modal-content">
                <li class="hex">
                    <div class="hexIn">
                        <a class="hexLink content" href="{{project.links[0].href}}">
                            <img src="{{asset('uploads/projets/' ~ project.image)}}" alt="Maquette du projet {{project.title}}" />
                            <h2 class="white-text">{{project.title}}</h2>
                            {{project.description|raw}}
                        </a>
                    </div>
                </li>
            </div>
        </div>    
    {% endfor %}

    {# MOBILE #}
    <!-- Slider main container -->
    <div class="swiper">
        <!-- Additional required wrapper -->
        <ul class="swiper-wrapper">
            <!-- Slides -->
            {% for project in projects %}
                <li class="hex swiper-slide">
                    <div class="hexIn">
                        <a class="hexLink modal-trigger" data-target="modal1{{project.id}}">
                            <img src="{{asset('uploads/projets/' ~ project.image)}}" alt="Maquette du projet {{project.title}}" />
                            <h2>{{project.title}}</h2>
                            {{project.description|raw}}
                        </a>
                    </div>
                </li>
            {% endfor %}
        </ul>
        <div class="swiper-scrollbar"></div>
    </div>

{% endif %}