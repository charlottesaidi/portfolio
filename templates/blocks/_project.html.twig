{% if projects|default %}

    {# GALLERY #}
    <ul id="hexGrid">
        {% for project in projects %}
            <li class="hex">
                <div class="hexIn">
                    <a class="hexLink modal-trigger hex_modal-trigger" data-target="modal1{{project.id}}" data-project="{{project.id}}">
                        <img src="{{asset('uploads/projets/' ~ project.image)}}" alt="Maquette du projet {{project.title}}" />
                        <h2 class="white-text">{{project.title}}</h2>
                        {{project.description|raw}}
                    </a>
                </div>
            </li>
        {% endfor %}
    </ul>

    {# SWIPER #}
    <div class="swiper">
        <!-- Additional required wrapper -->
        <ul class="swiper-wrapper">
            <!-- Slides -->
            {% for project in projects %}
                <li class="hex swiper-slide">
                    <div class="hexIn">
                        <a class="hexLink modal-trigger hex_modal-trigger" data-target="modal1{{project.id}}">
                            <img src="{{asset('uploads/projets/' ~ project.image)}}" alt="Maquette du projet {{project.title}}" />
                            <h2>{{project.title}}</h2>
                            {{project.description|raw}}
                        </a>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>

{% endif %}