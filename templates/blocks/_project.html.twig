{% if projects|default %}

    {# GALLERY #}

    {# Desktop Blocks #}
    <div class="gallery hide-on-small-only">
        {% if tools|default %}
            <div class="tool_badges row">
                {% for tool in tools %}
                    <a href="#"><span class="badge col">{{tool.title}}</span></a>
                {% endfor %}
            </div>
        {% endif %}
        <div class="row">
            <div class="col s4">
                {% for project in projects|slice(0, 4) %}
                    <div class="hexIn">
                        <a class="hexLink modal-trigger hex_modal-trigger" data-target="modal1{{project.id}}" data-project="{{project.id}}">
                            <img src="{{asset('uploads/projets/' ~ project.image)}}" alt="Maquette du projet {{project.title}}" />
                            <h2>{{project.title}}</h2>
                            {{project.description|raw}}
                        </a>
                    </div>
                {% endfor %}
            </div>
            <div class="col s4">
                {% for project in projects|slice(4, 4) %}
                    <div class="hexIn">
                        <a class="hexLink modal-trigger hex_modal-trigger" data-target="modal1{{project.id}}" data-project="{{project.id}}">
                            <img src="{{asset('uploads/projets/' ~ project.image)}}" alt="Maquette du projet {{project.title}}" />
                            <h2>{{project.title}}</h2>
                            {{project.description|raw}}
                        </a>
                    </div>
                {% endfor %}
            </div>
            <div class="col s4">
                {% for project in projects|slice(8, 4) %}
                    <div class="hexIn">
                        <a class="hexLink modal-trigger hex_modal-trigger" data-target="modal1{{project.id}}" data-project="{{project.id}}">
                            <img src="{{asset('uploads/projets/' ~ project.image)}}" loading="lazy" alt="Maquette du projet {{project.title}}" />
                            <h2>{{project.title}}</h2>
                            {{project.description|raw}}
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    {# Mobile Slideshow #}
    <!-- Slideshow container -->
    <div class="slideshow-container show-on-small">

        <!-- Full-width images with number and caption text -->
        {% for project in projects %}
            <div class="slides fade">
                <a class="slide_link" data-target="modal1{{project.id}}" data-project="{{project.id}}">
                    <img src="{{asset('uploads/projets/' ~ project.image)}}" alt="Maquette du projet {{project.title}}" >
                    <h2 class="slide_text">{{project.title}}</h2>
                </a>
            </div>
        {% endfor %}

        <!-- Next and previous buttons -->
        <a class="prev">&#10094;</a>
        <a class="next">&#10095;</a>

    </div>

{% endif %}